        <Slider HorizontalAlignment="Left" Margin="624,130,0,0" VerticalAlignment="Top" Maximum="1" LargeChange="0.1" SmallChange="0.01" TickFrequency="0.25" Value="{Binding RightLegPressurePercent}" Width="90" IsDirectionReversed="True"/>
