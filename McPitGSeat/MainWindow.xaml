        <Label x:Name="label_Copy" Content="Pitch" HorizontalAlignment="Left" Margin="298,0,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="GY" HorizontalAlignment="Left" Margin="346,299,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="sliderGZ" HorizontalAlignment="Left" Margin="374,177,0,0" VerticalAlignment="Top" Width="20" Orientation="Vertical" Height="123" Value="{Binding GZ}" Maximum="4" Minimum="-4" SmallChange="0.25" TickFrequency="15" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="1"/>
