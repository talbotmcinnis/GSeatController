                                                </GeometryModel3D.Geometry>

                                                <GeometryModel3D.Material>
                                                    <DiffuseMaterial>
                                                        <DiffuseMaterial.Brush>
                                                            <SolidColorBrush 
                            Color="DarkGreen" 
                            Opacity="1.0"/>
                                                        </DiffuseMaterial.Brush>
                                                    </DiffuseMaterial>
                                                </GeometryModel3D.Material>

                                                <GeometryModel3D.Transform>
                                                    <Transform3DGroup>
                                                        <Transform3DGroup.Children>
                                                            <RotateTransform3D>
                                                                <RotateTransform3D.Rotation>
