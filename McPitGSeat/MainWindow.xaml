                <Button x:Name="btnCollapse" Content="Toggle"  VerticalAlignment="Bottom" Width="75" Height="25" Click="BtnCollapse_Click" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
