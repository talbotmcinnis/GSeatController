        <Slider HorizontalAlignment="Left" Margin="576,203,0,0" VerticalAlignment="Top" Maximum="1" LargeChange="0.1" SmallChange="0.01" TickFrequency="0.25" Value="{Binding ShoulderPressurePercent}" Width="27" Orientation="Vertical" Height="120"/>

        <CheckBox Content="R3" HorizontalAlignment="Left" Margin="458,94,0,0" VerticalAlignment="Top" IsChecked="{Binding R3}" IsEnabled="False"/>
        <CheckBox Content="R4" HorizontalAlignment="Left" Margin="515,94,0,0" VerticalAlignment="Top" IsChecked="{Binding R4}" IsEnabled="False"/>
